{
  // https://v3.nuxtjs.org/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"sourceMap": true,
    "types": [
      "node",
      "nuxt-windicss",
      "@nuxtjs/device",
      "@pinia/nuxt",
      "@nuxtjs/firebase",
      "nuxt-logrocket",
      "@nuxtjs/sentry",
      "@nuxt/image",
      "vitest/global"
    ]
  },
  "exclude": [
    "**/*/dist/*",
    "**/.nuxt/**",
    "**/nuxt.d.ts",
    "node_modules"
  ]
}
